    <Transition
        app:constraintSetEnd="@id/start_nav"
        app:constraintSetStart="@id/default_view"
        app:duration="1500"
        app:motionInterpolator="easeInOut">

        <OnSwipe
            app:dragDirection="dragRight"
            app:onTouchUp="autoComplete"
            app:touchAnchorId="@id/materialcard1"
            app:touchAnchorSide="right"
            app:touchRegionId="@id/materialcard1"/>

    </Transition>

    <Transition
        app:constraintSetEnd="@id/start_nav"
        app:constraintSetStart="@id/default_view"
        app:duration="1200"
        app:motionInterpolator="easeInOut">

        <OnClick
            app:clickAction="toggle"
            app:targetId="@+id/toggle_img" />

    </Transition>

    <Transition
        app:constraintSetStart="@id/start_nav"
        app:constraintSetEnd="@id/categories_list"
        app:duration="1200"
        app:motionInterpolator="easeInOut">

        <OnClick
            app:clickAction="toggle"
            app:targetId="@id/side_categories"/>

    </Transition>

    <Transition
        app:constraintSetStart="@id/categories_list"
        app:constraintSetEnd="@id/start_nav"
        app:duration="1500"
