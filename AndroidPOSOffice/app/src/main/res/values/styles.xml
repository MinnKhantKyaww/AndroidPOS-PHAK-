<resources>

    <!-- Base application theme. -->
    <style name="darktheme" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- Customize your theme here. -->
        <item name="rootbackgroundcolor">#353535</item><!--4E4E4E-->
        <item name="appbarcolor">#212121</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="backgroundcolor">#212121</item>
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <item name="colorAccent">#03DAC5</item><!--727272-->
        <item name="navsidebarbackground">#212121</item>
        <item name="navsideitembackground">#8B535353</item>
        <item name="navsideitemcolorchecked">#666666</item>
        <item name="navsideitemcolor" android:state_pressed="true">#E6E5E5</item>
        <item name="recyclerviewcolor">#121212</item>
        <item name="fabcolor">#282929</item>
        <item name="fabtintcolor">#000000</item>
        <item name="textcolor">#FAFAFA</item>
        <item name="iconcolor">#FFFFFF</item>
        <item name="hamburgercolor">@style/DrawerArrowStyle</item>
        <item name="selectioncolor">@style/AppTheme.AppbarOverlay</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="bottomsheetcolor">#212121</item>
        <item name="bottomsheetshadowcolor">@color/cardview_dark_background</item>
        <item name="startgradientbg">#121212</item>
        <item name="endgradientbg">#2C2C2C</item>
        <item name="materialcard1bg">#313131</item>
        <item name="materialcard2bg">#2B2B2B</item>
        <item name="cardbackgroundcolor">#212121</item>
        <item name="android:actionOverflowButtonStyle">@style/overflow</item>
        <item name="drawarrowleft">@style/DrawerArrowStyle</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar" xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- Customize your theme here. -->
        <item name="rootbackgroundcolor">#FCFCFC</item>
        <item name="appbarcolor">#FCFCFC</item>
        <item name="colorPrimaryDark">#F1F1F1</item>
        <item name="backgroundcolor">#EBE9E9</item>
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <item name="colorAccent">#DFDFDF</item>
        <item name="navsidebarbackground">#FFFFFF</item>
        <item name="navsideitembackground">#8BBBBBBB</item>
        <item name="navsideitemcolorchecked">#BBBBBB</item>
        <item name="navsideitemcolor" android:state_pressed="true">#CCCBCB</item>
        <item name="recyclerviewcolor">#FFFFFF</item>
        <item name="fabcolor">#DADADA</item>
        <item name="fabtintcolor">#000000</item>
        <item name="textcolor">#414040</item>
        <item name="iconcolor">#000000</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="bottomsheetcolor">#E9E7E7</item>
        <item name="bottomsheetshadowcolor">#D3D2D2</item>
        <item name="startgradientbg">#FCFCFC</item>
        <item name="endgradientbg">#EBEBEB</item>
        <item name="materialcard1bg">#E7E7E7</item>
        <item name="materialcard2bg">#DBDBDB</item>
        <item name="cardbackgroundcolor">#D9FFFFFF</item>
        <item name="android:actionOverflowButtonStyle">@style/overflow</item>
        <item name="drawarrowleft">@style/DrawerArrowStyle</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="AppThemeSlide" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light"/>

    <style name="AppTheme.AppbarOverlay" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:actionBarStyle">?attr/iconcolor</item>
    </style>

    <style name="AppTheme.AppbarOverlayDark" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="android:itemBackground">?attr/iconcolor</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
        <item name="android:duration">1000</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="color">?attr/iconcolor</item>
    </style>

    <style name="overflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">?attr/iconcolor</item>
    </style>

</resources>
