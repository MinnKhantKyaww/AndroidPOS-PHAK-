<resources>

    <!-- Base application theme. -->
    <style name="darktheme" parent="Theme.MaterialComponents.Light.DarkActionBar" xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- Customize your theme here. -->
        <item name="rootbackgroundcolor">#4E4E4E</item>
        <item name="appbarcolor">#4E4E4E</item>
        <item name="colorPrimaryDark">#4E4E4E</item>
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <item name="colorAccent">#727272</item>
        <item name="navsidebarbackground">#4E4E4E</item>
        <item name="navsideitembackground">#8B535353</item>
        <item name="navsideitemcolorchecked">#666666</item>
        <item name="navsideitemcolor" android:state_pressed="true">#808080</item>
        <item name="recyclerviewcolor">#4E4E4E</item>
        <item name="fabcolor">#A2A2A2</item>
        <item name="fabtintcolor">#FFFFFF</item>
        <item name="textcolor">#FAFAFA</item>
        <item name="iconcolor">#FFFFFF</item>
        <item name="hamburgercolor">@style/DrawerArrowStyle</item>
        <item name="selectioncolor">@style/AppTheme.AppbarOverlay</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="actionBarTheme">@style/AppTheme.AppbarOverlayDark</item>
        <!--<item name="toolbarStyle">#FFFFFF</item>
        <item name="actionBarPopupTheme">#FFFFFF</item>
        <item name="actionBarTheme">#FFFFFF</item>-->
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar" xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- Customize your theme here. -->
        <item name="rootbackgroundcolor">#FCFCFC</item>
        <item name="appbarcolor">#FCFCFC</item>
        <item name="colorPrimaryDark">#F1F1F1</item>
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <item name="colorAccent">#DFDFDF</item>
        <item name="navsidebarbackground">#FFFFFF</item>
        <item name="navsideitembackground">#8BBBBBBB</item>
        <item name="navsideitemcolorchecked">#BBBBBB</item>
        <item name="navsideitemcolor" android:state_pressed="true">#CCCBCB</item>
        <item name="recyclerviewcolor">#FFFFFF</item>
        <item name="fabcolor">#DADADA</item>
        <item name="fabtintcolor">#000000</item>
        <item name="textcolor">#414040</item>
        <item name="iconcolor">#000000</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="actionBarTheme">@style/AppTheme.AppbarOverlayDark</item>
        <!--<item name="toolbarStyle">#000000</item>
        <item name="actionBarPopupTheme">#FFFFFF</item>
        <item name="actionBarStyle">#000000</item>-->
    </style>

    <style name="AppThemeSlide" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light"/>

    <style name="AppTheme.AppbarOverlay" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:actionBarStyle">?attr/iconcolor</item>
    </style>

    <style name="AppTheme.AppbarOverlayDark" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="android:itemBackground">?attr/iconcolor</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
        <item name="android:duration">1000</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">?attr/iconcolor</item>
    </style>

</resources>
